# Recipe for version 3.0.2.0 by Demian Florentin <demianflorentin@gmail.com>, on Fri Dec 23 08:59:19 PYST 2016
# Recipe (MakeRecipe) for WxPython by Lucas Correia Villa Real <lucasvr@gobolinux.org>, on Tue Aug 9 11:10:29 BRT 2005
compile_version=1.8.0
url="http://downloads.sourceforge.net/wxpython/wxPython-src-3.0.2.0.tar.bz2"
file_size=58304944
file_md5=922b02ff2c0202a7bf1607c98bbbbc04
recipe_type=configure

configure_options=(
        "--with-gtk"
        "--enable-display"
        "--enable-geometry"
        "--enable-graphics_ctx"
        "--enable-intl"
        "--enable-sound"
        "--enable-unicode"
        "--enable-optimize"
        "--disable-monolithic"
)

post_install() {
    Quiet pushd wxPython
    python_opts="WXPORT=gtk2 UNICODE=1 EP_ADD_OPTS=1 NO_SCRIPTS=1 BUILD_GL_CANVAS=0 build_ext"
    python setup.py $python_opts build
    python setup.py $python_opts install --prefix=$target
    for s in scripts/*
    do
      [ -x "$s" ] && cp -v "$s" $target/bin
    done
    Quiet popd

    Quiet pushd $target/include
    ln -fs wx-2.9/wx .
    Quiet popd

    SymlinkProgram WxPython
}
